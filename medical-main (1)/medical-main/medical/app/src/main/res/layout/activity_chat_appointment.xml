<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_4"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a time slot for your chat appointment:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:padding="16dp" />

    <!-- GridLayout to display time slots -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:padding="16dp">

        <!-- Time Slot 1 -->
        <Button
            android:id="@+id/btn_slot1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="10:00 AM - 10:15 AM"
            android:layout_margin="8dp"/>

        <!-- Time Slot 2 -->
        <Button
            android:id="@+id/btn_slot2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="11:00 AM - 12:00 PM"
            android:layout_margin="8dp"/>

        <!-- Time Slot 3 -->
        <Button
            android:id="@+id/btn_slot3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="01:00 PM - 02:00 PM"
            android:layout_margin="8dp"/>

        <!-- Time Slot 4 -->
        <Button
            android:id="@+id/btn_slot4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="03:00 PM - 04:00 PM"
            android:layout_margin="8dp"/>

    </GridLayout>

    <!-- Book Slot Button -->
    <Button
        android:id="@+id/btn_book_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

</LinearLayout>